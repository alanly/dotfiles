{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "autoshare": false,
  "share": "disabled",
  "plugin": [
    "oh-my-opencode@3.0.0-beta.10",
    "@knikolov/opencode-plugin-simple-memory",
  ],
  "provider": {
    "openrouter": {
      "name": "OpenRouter",
      "models": {
        "google/gemini-3-pro-preview": {
          "name": "Gemini 3 Pro",
          "attachment": true,
          "limit": {
            "context": 1048576,
            "output": 65535,
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"],
          },
        },
        "google/gemini-3-flash-preview": {
