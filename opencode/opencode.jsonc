            "input": ["text", "image", "pdf"],
            "output": ["text"],
          },
        },
        "openai/gpt-5.2": {
          "name": "GPT 5.2",
          "limit": {
            "context": 400000,
            "output": 128000,
          },
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"],
          },
          "variants": {
            "none": {
              "reasoningEffort": "none",
              "reasoningSummary": "auto",
              "textVerbosity": "medium",
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium",
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium",
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium",
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
